%section.container
  %h2.page-header Sign up for a new account
  = bootstrap_form_for @user do |f|
    .row
      .col-sm-4
        = f.text_field :full_name, label: "Full Name"
    .row
      .col-sm-4
        = f.email_field :email, label: "Email Address"
    .row
      .col-sm-4
        = f.password_field :password, label: "Password"
    .row
      .col-sm-4
        = f.password_field :password, label: "Confirm Password"
        = f.submit "Sign up", class: "btn btn-info"
